<!-- book_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Cột 1: Tên sách và tác giả -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <!-- Tên sách -->
        <TextView
            android:id="@+id/text_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Book Title" />

        <!-- Tên tác giả -->
        <TextView
            android:id="@+id/text_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Author Name" />
    </LinearLayout>

    <!-- Cột 2: Checkbox thể loại sách -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- CheckBox cho thể loại Khoa học -->
        <CheckBox
            android:id="@+id/checkbox_science"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Khoa học" />

        <!-- CheckBox cho thể loại Tiểu thuyết -->
        <CheckBox
            android:id="@+id/checkbox_novel"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Tiểu thuyết"
            android:layout_marginStart="8dp"/>

        <!-- CheckBox cho thể loại Thiếu nhi -->
        <CheckBox
            android:id="@+id/checkbox_children"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Thiếu nhi"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Cột 3: Ngày xuất bản -->
    <TextView
        android:id="@+id/text_publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Publish Date" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:id="@+id/textViewDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</LinearLayout>
