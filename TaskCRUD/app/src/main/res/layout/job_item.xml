<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Biểu tượng giới tính -->
    <ImageView
        android:id="@+id/imageViewGender"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_man" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Tên công việc -->
        <TextView
            android:id="@+id/textViewJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên công việc"
            android:textSize="16sp" />

        <!-- Nội dung công việc -->
        <TextView
            android:id="@+id/textViewJobContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung công việc"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewCompletionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày hoàn thành"
        android:textSize="16sp"
        android:layout_marginStart="16dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:id="@+id/textViewDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>



</LinearLayout>
